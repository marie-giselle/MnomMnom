@page
@model Mnom_Mnom.Pages.Account.LoginModel

<h2>Вход на сайт</h2>

<a asp-page="./Register">Регистрация</a>

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Login.UserKey">Введите Email или номер телефона</label>
            <input type="text" asp-for="Login.UserKey" />
            <span asp-validation-for="Login.UserKey" />
        </div>
        <div class="form-group">
            <label asp-for="Login.Password">Введите пароль</label>
            <input asp-for="Login.Password" />
            <span asp-validation-for="Login.Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </form>
</div>