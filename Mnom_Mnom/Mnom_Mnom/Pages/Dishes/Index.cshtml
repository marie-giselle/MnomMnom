@page "{type:int?}"
@model Mnom_Mnom.Pages.Dishes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Dish) {
        <tr>            
            <td rowspan="2">
                <img src="@item.ImagePath" height="200" width="200"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DishID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DishID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DishID">Delete</a>
            </td>
        </tr>
        <tr>
            <td colspan="5" align="right">               
                <form method="post">
                    <input type="submit" value="Добавить в корзину" asp-page-handler="AddToCart" asp-route-id="@item.DishID" class="btn btn-primary"/>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
